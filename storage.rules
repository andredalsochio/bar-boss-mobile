rules_version = '2';

// Firebase Storage Security Rules for Bar Boss Mobile
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write their own event images
    match /events/{eventId}/images/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.auth.uid != null
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*'); // Only images
      allow delete: if request.auth != null
                    && request.auth.uid != null;
    }
    
    // Allow authenticated users to read and write bar profile images
    match /bars/{barId}/profile/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.auth.uid != null
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*'); // Only images
      allow delete: if request.auth != null
                    && request.auth.uid != null;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}